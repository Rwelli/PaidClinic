<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:PaidClinic.ViewModels"
             xmlns:dialogHost="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             x:DataType="vm:PatientViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PaidClinic.Views.PatientPage">

    <Design.DataContext>
        <vm:PatientViewModel />
    </Design.DataContext>

    <dialogHost:DialogHost
        CloseOnClickAway="True" BorderBrush="Transparent"
        BlurBackground="True"
        dialogHost:DialogHostStyle.CornerRadius="8">
        <StackPanel Orientation="Vertical" Margin="10">
            <Label Content="Пациенты:"
                   FontSize="16"
                   Margin="0 5"
                   FontWeight="SemiBold" />
            <DataGrid x:Name="DataGridPatients" ItemsSource="{Binding Patients}"
                      GridLinesVisibility="All"
                      IsReadOnly="True"
                      BorderBrush="Transparent"
                      BorderThickness="0"
                      Margin="12 4"
                      Height="300"
                      SelectionChanged="DataGridSelectedPatient">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" />
                    <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" />
                    <DataGridTextColumn Header="Отчество" Binding="{Binding MiddleName}" />
                    <DataGridTextColumn Header="Год рождения" Binding="{Binding BirthDate}" />
                </DataGrid.Columns>
            </DataGrid>
            <Grid ColumnDefinitions="Auto,*,Auto">
                <StackPanel
                    Grid.Column="0"
                    Orientation="Vertical" Classes="doctor-labels">
                    <Label Content="Фамилия:" />
                    <Label Content="Имя:" />
                    <Label Content="Отчество:" />
                    <Label Content="Год рождения:" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Orientation="Vertical"
                    Classes="doctor-labels">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox
                            Grid.Column="0"
                            Text="{Binding CurrentPatient.FirstName}" />
                        <Button 
                            Grid.Column="1" CornerRadius="80" Classes="Flat"
                            Width="50" Height="50"
                            Command="{Binding ClearFirstName}">
                            <materialIcons:MaterialIcon Kind="Clear" />
                        </Button>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox
                            Grid.Column="0"
                            Text="{Binding CurrentPatient.LastName}" />
                        <Button 
                            Grid.Column="1" CornerRadius="80" Classes="Flat"
                            Width="50" Height="50"
                            Command="{Binding ClearLastName}">
                            <materialIcons:MaterialIcon Kind="Clear" />
                        </Button>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox
                            Grid.Column="0"
                            Text="{Binding CurrentPatient.MiddleName}" />
                        <Button 
                            Grid.Column="1" CornerRadius="80" Classes="Flat"
                            Width="50" Height="50"
                            Command="{Binding ClearMiddleName}">
                            <materialIcons:MaterialIcon Kind="Clear" />
                        </Button>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <NumericUpDown
                            Grid.Column="0"
                            Text="{Binding CurrentPatient.BirthDate}" Margin="0 10 0 0"  />
                        <Button 
                            Grid.Column="1" CornerRadius="80" Classes="Flat"
                            Width="50" Height="50"
                            Command="{Binding ClearBirthDate}">
                            <materialIcons:MaterialIcon Kind="Clear" />
                        </Button>
                    </Grid>

                    <Grid HorizontalAlignment="Right" ColumnDefinitions="Auto,Auto,Auto,Auto">
                        <Button
                            Grid.Column="0"
                            Margin="10"
                            Foreground="Red"
                            FontWeight="Bold"
                            HorizontalAlignment="Right"
                            Classes="Flat Accent"
                            Content="Удалить"
                            Command="{Binding DeletePatientCommand}"
                            CommandParameter="{Binding #DataGridPatients.SelectedItem}"/>
                        <Button
                            Grid.Column="1"
                            Margin="10"
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            Classes="Flat"
                            Command="{Binding EditPatientCommand}"
                            Content="Изменить" />
                        <Button
                            Grid.Column="2"
                            Margin="10"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Content="Добавить"
                            Command="{Binding AddPatientCommand}"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </StackPanel>
        <dialogHost:DialogHost.DialogContent>
            <StackPanel Orientation="Vertical">
            </StackPanel>
        </dialogHost:DialogHost.DialogContent>
    </dialogHost:DialogHost>
</UserControl>
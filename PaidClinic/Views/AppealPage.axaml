<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:PaidClinic.ViewModels"
             xmlns:dialogHost="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             x:DataType="vm:AppealViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="PaidClinic.Views.AppealPage">

    <Design.DataContext>
        <vm:AppealViewModel />
    </Design.DataContext>

    <dialogHost:DialogHost
        CloseOnClickAway="True" BorderBrush="Transparent"
        BlurBackground="True"
        dialogHost:DialogHostStyle.CornerRadius="8">
        <StackPanel Orientation="Vertical" Margin="10">
            <Label Content="Пациенты:"
                   FontSize="16"
                   Margin="0 5"
                   FontWeight="SemiBold" />
            <DataGrid x:Name="DataGridPatients" ItemsSource="{Binding Appeals}"
                      GridLinesVisibility="All"
                      IsReadOnly="True"
                      BorderBrush="Transparent"
                      BorderThickness="0"
                      Margin="12 4"
                      SelectionChanged="DataGridSelectedAppeal"
                      Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата обращения" Binding="{Binding Date}" />
                    <DataGridTextColumn Header="Фамилия врача" Binding="{Binding Doctor.MiddleName}" />
                    <DataGridTextColumn Header="Имя врача" Binding="{Binding Doctor.FirstName}" />
                    <DataGridTextColumn Header="Фамилия пациента" Binding="{Binding Patient.MiddleName}" />
                    <DataGridTextColumn Header="Имя пациента" Binding="{Binding Patient.MiddleName}" />
                    <DataGridTextColumn Header="Диагноз" Binding="{Binding Diagnosis}" />
                </DataGrid.Columns>
            </DataGrid>
            <Grid ColumnDefinitions="Auto,*,Auto">
                <StackPanel
                    Grid.Column="0"
                    Orientation="Vertical" Classes="doctor-labels">
                    <Label Content="Врач:" />
                    <Label Content="Пациент:" />
                    <Label Content="Дата обращения:" />
                    <Label Content="Диагноз:" />
                    <Label Content="Стоимость лечения (руб.):" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Orientation="Vertical"
                    Classes="doctor-labels">
                    <Grid ColumnDefinitions="*, Auto">
                        <ComboBox
                            Grid.Column="0"
                            ItemsSource="{Binding Doctors}"
                            SelectedValue="{Binding CurrentAppeal.Doctor}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FullName}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button 
                            Grid.Column="1" CornerRadius="80" Classes="Flat"
                            Width="50" Height="50"
                            Command="{Binding ClearDoctor}">
                            <materialIcons:MaterialIcon Kind="Clear" />
                        </Button>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <ComboBox
                            Grid.Column="0" 
                            ItemsSource="{Binding Patients}"
                            SelectedValue="{Binding CurrentAppeal.Patient}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FullName}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <Button 
                            Grid.Column="1" CornerRadius="80" Classes="Flat"
                            Width="50" Height="50"
                            Command="{Binding ClearPatient}">
                            <materialIcons:MaterialIcon Kind="Clear" />
                        </Button>
                    </Grid>
                    <Grid ColumnDefinitions="*, Auto">
                        <DatePicker Grid.Column="0" SelectedDate="{Binding CurrentAppeal.Date}"/>
                        
                        <Button 
                            Grid.Column="1" CornerRadius="80" Classes="Flat"
                            Width="50" Height="50"
                            Command="{Binding ClearDate}">
                            <materialIcons:MaterialIcon Kind="Clear" />
                        </Button>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox
                            Grid.Column="0"
                            Text="{Binding CurrentAppeal.Diagnosis}"/>
                        
                        <Button 
                            Grid.Column="1" CornerRadius="80" Classes="Flat"
                            Width="50" Height="50"
                            Command="{Binding ClearDiagnosis}">
                            <materialIcons:MaterialIcon Kind="Clear" />
                        </Button>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <NumericUpDown
                            Grid.Column="0"
                            Text="{Binding CurrentAppeal.CostOfTreatment}" Margin="0 10 0 0"  />
                        <Button 
                            Grid.Column="1" CornerRadius="80" Classes="Flat"
                            Width="50" Height="50"
                            Command="{Binding ClearCostOfTreatment}">
                            <materialIcons:MaterialIcon Kind="Clear" />
                        </Button>
                    </Grid>
                    <Grid HorizontalAlignment="Right" ColumnDefinitions="Auto,Auto,Auto,Auto">
                        <Button
                            Grid.Column="0"
                            Margin="10"
                            FontWeight="Bold"
                            HorizontalAlignment="Right"
                            Classes="Accent Flat"
                            Content="Удалить"
                            Foreground="Red"
                            Command="{Binding DeleteAppealCommand}"
                            CommandParameter="{Binding #DataGridPatients.SelectedItem}"/>
                        <Button
                            Grid.Column="1"
                            Margin="10"
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            Classes="Flat"
                            Command="{Binding EditAppealCommand}"
                            Content="Изменить" />
                        <Button
                            Grid.Column="2"
                            Margin="10"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Content="Добавить"
                            Command="{Binding AddAppealCommand}"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </StackPanel>
        <dialogHost:DialogHost.DialogContent>
            <StackPanel Orientation="Vertical">
            </StackPanel>
        </dialogHost:DialogHost.DialogContent>
    </dialogHost:DialogHost>
</UserControl>